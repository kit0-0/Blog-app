<section class="user-section my-10 w-[60%] mx-auto">
    <div class="user-card flex justify-center items-center bg-white rounded-lg shadow-md p-5 hover:shadow-lg">
        <div class="user-img mr-4">
            <img src="<%= @user.photo %>" alt="<%= @user.name %>'s Photo" class="user-photo rounded-full w-24 h-24">
        </div>
        <div class="user-info bg-gray-200 border-2 w-[500px] rounded-md px-5 hover:bg-gray-300 transition duration-300 ease-in-out">
            <h2 class="font-bold text-3xl text-gray-800 mb-2"><%= @user.name %></h2>
            <h2 class="post-counter font-semibold text-sm text-gray-500">Number of posts: <%= @user.post_counter %></h2>
        </div>
    </div>

    <div class="bio-container border-2 bg-gray-100 rounded-md mt-5 p-4">
        <h2 class="bg-gray-200 px-3 py-2 font-bold text-lg">Bio</h2>
        <p class="text-sm text-gray-800 font-semibold mt-2"><%= @user.bio %></p>
    </div>
</section>

<section class="post-section w-[70%] mx-auto my-20">
    <div class="post-container flex justify-center flex-wrap">
        <% @user.recent_posts.each do |post| %>
            <%= link_to user_post_path(user_id: post.author_id, id: post.id) do %>
                <div class="post-card bg-gray-200 border-2 my-5 rounded-md w-[700px] hover:bg-gray-300 transition duration-300 ease-in-out">
                    <h2 class="font-semibold text-lg bg-black text-white px-3 py-2 rounded-t-md"><%= post.title %></h2>
                    <p class="line-clamp-2 px-4 py-3 text-sm text-gray-800"><%= post.text %></p>
                    <div class="reactions p-4">
                        <span class="font-semibold text-sm">Comments: <%= post.comment_counter %></span>
                        <span class="font-semibold text-sm ml-4">Likes: <%= post.like_counter %></span>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
    <div class="flex justify-center">
        <%= link_to "See all posts", user_posts_path(user_id: @user.id), class: "all-post bg-black text-white border-2 w-[150px] p-2 rounded-md" %>
    </div>
</section>
