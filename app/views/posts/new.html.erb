<section class="new-post-section">
    <div class="new-post-container bg-white rounded-md border-2 shadow-md p-4">
        <h1 class="bg-black text-white px-4 py-2 text-2xl font-semibold">Add a new post</h1>
        <%= form_with model: @post, url: user_posts_path do |form| %>
            <div class="form-group">
                <%= form.label :title, class: "block text-lg font-semibold px-4 py-2"%>
                <%= form.text_field :title, class: "border border-gray-300 rounded-md w-full px-4 py-2"%>
            </div>

            <div class="form-group">
                <%= form.label :text, class: "block text-lg font-semibold px-4 py-2"%>
                <%= form.text_area :text, cols: 40, rows: 2, class: "border border-gray-300 rounded-md w-full px-4 py-2"%>
            </div>

            <div class="flex justify-center my-4">
                <%= form.submit "Submit", class: "bg-black text-white hover:text-white hover:font-semibold border-2 px-4 py-2 rounded-md"%>
            </div>
        <% end %>
    </div>
</section>
